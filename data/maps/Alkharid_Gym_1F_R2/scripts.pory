                subvar(VAR_POKESCAPE_ALKHARID_GYM_ALI_STATE, 1)
                hidenamebox
                closemessage
            case 3:
                namebox("Warrior")
                msgbox(format("Are you asking for a fight?"))
                subvar(VAR_POKESCAPE_ALKHARID_GYM_ALI_STATE, 1) 
                hidenamebox
                closemessage
        }
	return
}


