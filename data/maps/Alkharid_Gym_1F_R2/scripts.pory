            case 0: 
                namebox("Warrior")
                msgbox(format("I need to guard the south gate tomorrow and give out these cabbagesâ€¦"))
                namebox("Prince Ali")
                msgbox(format("â€¦{PAUSE 16}â€¦{PAUSE 16}\nJust Kidding!\pIt was me all along."))
                setvar(VAR_POKESCAPE_ALKHARID_GYM_QUEST, 20)
            case 1:
                namebox("Warrior")
