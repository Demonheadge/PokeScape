script TAVERLEY_DUNGEON_SIGN
{
	lock
	faceplayer
	msgbox(format("BEWARE!\pStay clear of the dungeon to the south!\pIt is full of many dangerous monsters that will kill any unprepared adventurers.\pProceed with extreme caution!"))
	release
	end
}

