mapscripts Taverley_MapScripts {
    MAP_SCRIPT_ON_TRANSITION { 
        setflag(FLAG_VISITED_TAVERLEY)
    }

}

script TAVERLEY_SIGN
{
	lock
	faceplayer
	msgbox(format("Welcome to Taverley.\pHome of the Druids and the secrets of Herblore."))
	release
	end
}


script TAVERLEY_CORGI
{
