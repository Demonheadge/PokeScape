	while (var(VAR_RESULT) != 1) {
        msgbox(format("Noob.\p...How about now?"), MSGBOX_YESNO)	
	}
		msgbox(format("Nice.\pPlease choose from one of these 3 monsters on the table."))
		hidenamebox
	release
	end
}


