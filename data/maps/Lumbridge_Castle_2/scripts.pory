					msgbox(format("You decided that your Cooking level was too low to complete this task."))
					release
					end
				}
			}
			else {
				msgbox(format("You have already baked the cake."))
				release
				end
			}

		case 3: 
		case 4: 
		case 5: 
			goto(COOKING_RANGE)
			release
			end
	}
