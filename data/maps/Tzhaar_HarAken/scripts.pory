movement movement_HARAKEN_1 {
    face_right
    walk_in_place_right * 2
    face_up
    step_end
}
movement movement_HARAKEN_2 {
    face_left
    walk_in_place_left * 2
    face_down
    step_end
}

movement HAR_AKEN_WALK_SLOW {
    lock_facing_direction
    walk_slow_down * 1
    unlock_facing_direction
    step_end
}




