mapscripts Varrock_Pub_1F_MapScripts {
    MAP_SCRIPT_ON_TRANSITION { 
        call(PUB_EVENT_STATE)   
    }
    MAP_SCRIPT_ON_FRAME_TABLE [
		VAR_POKESCAPE_GOLDENGNOMES, 15: GOLDENGNOME_EVENT_END
    ]
}



script PUB_EVENT_STATE {

    random(3)
        switch (var(VAR_RESULT)) 
        {
            case 0:
                addobject(13)
                addobject(14)
                addobject(15)
                addobject(16)
                addobject(17)
                addobject(18)
                addobject(19)
                addobject(20)
                clearflag(FLAG_TEMP_2)
                removeobject(2)
                removeobject(9)
                removeobject(7)
                removeobject(8)
                removeobject(6)
                removeobject(11)
                setflag(FLAG_TEMP_1)
                return
            case 1:
            case 2:
                removeobject(13)
                removeobject(14)
                removeobject(15)
                removeobject(16)
                removeobject(17)
                removeobject(18)
                removeobject(19)
                removeobject(20)
                setflag(FLAG_TEMP_2)
                addobject(2)
                addobject(9)
                addobject(7)
                addobject(8)
                addobject(6)
                addobject(11)
                clearflag(FLAG_TEMP_1)
                return
        }
	
}


