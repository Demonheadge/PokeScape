		setmetatile(12, 35, METATILE_Karamja_SAND_BANANA, 0) 
		setmetatile(10, 36, METATILE_Karamja_SAND_BANANA, 0) 
		setmetatile(15, 35, METATILE_Karamja_SAND_BANANA, 0) 
