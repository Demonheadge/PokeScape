		msgbox(format("Great!\pRemember I need 10 bananas from the plantation.\pBring them back to me when you have them."))
	}
	else {
		msgbox(format("…\pWell if you change your mind you know where I am."))
	}
	hidenamebox
	closemessage
	release
	end
}


