script ROUTE23_STATE {
    setflag(FLAG_TEMP_1D)
    removeobject(16)
    removeobject(17)
    removeobject(18)
    removeobject(19)
    removeobject(20)
    if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 165)
    {
        clearflag(FLAG_TEMP_1D)
		addobject(16)
		addobject(17)
		addobject(18)
		addobject(19)
		addobject(20)
    }
	//REMOVE DRAWVES CLEARING THE ROCKSLIDE.
	//If EQUAL or MORE than 'x' then remove the objects.
	if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) >= 165) { // if EQUAL or MORE THAN 200 //If progressed far enough in story mode. *change 200 to correct progress.
		removeobject(11)
		removeobject(10)
		setflag(FLAG_TEMP_1E)
	}
	if (flag(FLAG_ROCKS_ROUTE23) == TRUE) {
		setflag(FLAG_TEMP_1)
		removeobject(8)
		setobjectmovementtype(5, MOVEMENT_TYPE_WANDER_LEFT_AND_RIGHT)
		setobjectxyperm(5, 12, 10)
	}
}

script TRIGGER_STORYMODE_EVENT_ROUTE23 {
	lockall
	//Sir Owen and white knights walk off to the north.

	setflag(FLAG_TEMP_1D)
    removeobject(16)
    removeobject(17)
    removeobject(19)
    removeobject(20)

	applymovement(18, Movement_STORY_R23_1)
	waitmovement(0)

	namebox("Tiffy Cashien")
	msgbox(format("Oho, good to see you {PLAYER}.\pWhat brings you here?"))
	hidenamebox
	closemessage
	//interact
	namebox("Tiffy Cashien")
	msgbox(format("A black knight?\pWell what a coincidence, Sir Owen and the Temple knights are currently investigating just that.\pSay why don't you join them.\pI'll contact them using my handy Comm-Orb and let them know you will be joining them."))
	hidenamebox
	closemessage
	namebox("Tiffy Cashien")
	msgbox(format("Speaking of which, you should probably have one."))
	hidenamebox
	closemessage
	giveitem(ITEM_COMMORB, 1)
	//give player a Comm-Orb - to communicate the mission details.
	namebox("Tiffy Cashien")
	msgbox(format("That Comm-Orb will allow us to communicate across great distances and provide you with our support."))
	hidenamebox
	closemessage
	//face north
	namebox("Tiffy Cashien")
	msgbox(format("Now, if you follow this path it will lead you to Ice Mountain.\pThe Temple Knights should be there."))
	hidenamebox
	closemessage
	//faceplayer
	namebox("Tiffy Cashien")
	msgbox(format("I am on my way back to Falador.\pRemember if you need anything just use the Comm-Orb to contact me.\pGoodbye {PLAYER}."))
	hidenamebox
	closemessage
	
	setflag(FLAG_TEMP_1F)
    removeobject(18)
	setvar(VAR_POKESCAPE_STORYMODE_PROGRESS, 170)
	releaseall
	end
}

