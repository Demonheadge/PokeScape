//NPCs

script NPC_WORKER_BLOCK
{
	lock
	faceplayer
    namebox ("Worker")
	msgbox(format("Sorry, this ladder is off limits.\pSomeone fell down it and broke their leg, so we are waiting on a health and safety assessment before we let anyone else down there.\p{PAUSE15}Yes, that also means we have to wait until we can rescue them!"))
    hidenamebox
	release
	end
}

