script DIGSITE_ANIMAL_BONES {
    lock
    random(4)
    switch (var(VAR_RESULT)) {
        case 0: 
            msgbox(format("You don't have any of the proper equipment for handling old bones.\pBetter leave these for the professionals."))
        case 1: 
            msgbox(format("Unfortunately, the pile of bones is not a skeleton in disguise waiting to battle.\pHow boring."))
        case 2: 
            msgbox(format("These bones look ancient.\pYou decide not to touch them, just in case they're cursed."))
        case 3: 
            msgbox(format("It belongs in a museum!"))
    }
    closemessage
    release
    end
}