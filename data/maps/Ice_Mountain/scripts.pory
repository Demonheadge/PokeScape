script ICEMOUNTAIN_STATE {
	removeobject(10)
	removeobject(11)
	setflag(FLAG_TEMP_1F)
	if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) >= 187) {
		removeobject(6)
		removeobject(9)
		setflag(FLAG_TEMP_1E)
		addobject(10)
		addobject(11)
		clearflag(FLAG_TEMP_1F)
	}
	return
}
script ICEMOUNTAIN_METATILES {
	if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) >= 187) {
		setmetatile(34, 14, METATILE_Ice_Mountain_SNOW_LOGFIRE_OUT, TRUE)  
	}
	return
}



