script TRIGGER_BLACK_KNIGHTS_FORTRESS_ENTRY {
	lockall
	//check for outfit.
	if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 186) {
		playse(SE_PIN)
		applymovement (BKGUARD_1_ID,movement_BK_FORT_GUARD_right)
		applymovement (BKGUARD_2_ID,movement_BK_FORT_GUARD_left)
		applymovement (OBJ_EVENT_ID_FOLLOWER, Movement_InteractFACEUP)
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
		waitmovement(0)
		namebox ("Guard B")
		msgbox(format("Hey, you are not a guard!"))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
		waitmovement(0)
		namebox ("Guard D")
		msgbox(format("Yeah, neither of you are guards."))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
		waitmovement(0)
		namebox ("Guard B")
		msgbox(format("Sorry, but you've got to at least be a guard to pass through here.\pOtherwise if we let you in we would be in trouble!"))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
		waitmovement(0)
		namebox ("Guard D")
		msgbox(format("Yeah, so don't go off around the corner and dress up as guard now.\pWe would see right through you if you did."))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_FOLLOWER, MOVEMENT_LOCKFACING_WALK_DOWN)
		applymovement (OBJ_EVENT_ID_PLAYER, MOVEMENT_WALK_DOWN)
		waitmovement(0)
		namebox ("Sir Owen")
		msgbox(format("Hmm... We are going to have to get a guard uniform from somewhere.\pLet us retreat momentarily while we think of something."))
		closemessage
		hidenamebox
		setvar(VAR_POKESCAPE_STORYMODE_PROGRESS, 185)
	}
	elif (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 187) {
		applymovement (BKGUARD_1_ID,movement_BK_FORT_GUARD_right)
		applymovement (BKGUARD_2_ID,movement_BK_FORT_GUARD_left)
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
		waitmovement(0)
		namebox ("Guard B")
		msgbox(format("Halt!\pYou two look a lot like{PAUSE 15}…{PAUSE 15}…"))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
		waitmovement(0)
		namebox ("Guard D")
		msgbox(format("Mighty fine guards!\pMan I love your blood stained armours!"))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
		waitmovement(0)
		namebox ("Guard B")
		msgbox(format("So cool!\pBy the way, be careful around the fortress today.\pThere's an important guest inside."))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
		waitmovement(0)
		namebox ("Guard D")
		msgbox(format("Security inside has been increased.\pRemember your Black Knight history and you'll be fine, though."))
		closemessage
		hidenamebox
		setvar(VAR_TEMP_0, 1)
	}
	else {
		//check outfit
		applymovement (BKGUARD_1_ID,movement_BK_FORT_GUARD_right)
		applymovement (BKGUARD_2_ID,movement_BK_FORT_GUARD_left)
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
		waitmovement(0)
		namebox ("Guard B")
		msgbox(format("Hello fellow guard!\pYou may pass!"))
		closemessage
		hidenamebox
		applymovement (OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
		waitmovement(0)
		namebox ("Guard D")
		msgbox(format("Remember to keep an eye out for those pesky White Knights!"))
		closemessage
		hidenamebox
		setvar(VAR_TEMP_0, 1)
	}
	releaseall
	end
}

