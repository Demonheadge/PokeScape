	switch VAR_RESULT
	case 1, WEATHER_CHANGE_ROUTE_3
	case 2, WEATHER_CHANGE_ROUTE_4
	case 4, WEATHER_CHANGE_ROUTE_5
	case 5, WEATHER_CHANGE_ROUTE_6
