movement Rat1Run{
	jump_in_place_up
	walk_fast_up *3
	jump_up
	walk_fast_up *6
	
}

movement Rat2Run{
	jump_in_place_up
	walk_fast_up *2
	walk_fast_right *8
	jump_right
	walk_fast_right *6
	
}

movement Rat3Run{
	jump_in_place_down
	walk_fast_down *3
	jump_down
	walk_fast_down *8
	
}

movement RatArenaMoveDown{
	walk_down *3
}