script ROUTE52_NPC_1
{
	lock
	faceplayer
    namebox ("Raedwald")
	msgbox(format("I'll let you in on a little secret.\pI buried some hidden treasure near here.\pI don't want to give away too many secrets, but it's a special cloak for people who like solving clues."))
    closemessage
    hidenamebox
	release
	end
}